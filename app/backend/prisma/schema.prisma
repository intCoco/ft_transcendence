generator client {
	provider = "prisma-client-js"
}

datasource db {
	provider = "sqlite"
	url 	 = env("DATABASE_URL")
}

enum FriendshipStatus {
	PENDING
	ACCEPTED
	BLOCKED
}

model User {
	id				Int     @id @default(autoincrement())
	email			String  @unique
	nickname		String  @unique
	passwordHash	String
	avatarUrl		String	@default("") // choose an avatar url by default

	// --- Social ---
	friends			User[]  @relation("UserFriends")
	friendsOf		User[]  @relation("UserFriends") // mandatory by prisma, must ignore it and dont use it

	blockedUsers   Block[] @relation("UserBlocks")
	blockedByUsers Block[] @relation("UserBlockedBy")

	// --- Stats ---
	wins			Int     @default(0) // initialized to 0 because it's a counter
  	losses			Int     @default(0) // same
	xp				Int     @default(0) // same

	// --- success ---
	success1		Boolean @default(false)
	success2		Boolean @default(false)
	success3		Boolean @default(false)


	// --- Meta ---
	createdAt 		DateTime @default(now())

	// --- Friendships ---
	sentRequests     Friendship[] @relation("SentFriendships")
	receivedRequests Friendship[] @relation("ReceivedFriendships")

	// ... UserSettings
  	settings     UserSettings?

	// --- SetMassage ---
	sentMessages     Message[] @relation("MessageFromUser")
	receivedMessages Message[] @relation("MessageToUser")
}

model UserSettings {
  id         Int    @id @default(autoincrement())
  userId     Int    @unique
  background String @default("/images/abstract.png")

  user       User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Friendship {
	id          Int @id @default(autoincrement())

	requesterId Int
	receiverId  Int

	requester User @relation("SentFriendships", fields: [requesterId], references: [id])
	receiver  User @relation("ReceivedFriendships", fields: [receiverId], references: [id])

	status     FriendshipStatus @default(PENDING)

	createdAt  DateTime @default(now())
	updatedAt  DateTime @updatedAt

	@@unique([requesterId, receiverId])
}

model Block {
  blockerId Int
  blockedId Int

  blocker User @relation("UserBlocks", fields: [blockerId], references: [id])
  blocked User @relation("UserBlockedBy", fields: [blockedId], references: [id])

  @@id([blockerId, blockedId])
}